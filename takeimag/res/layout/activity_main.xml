<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Photo" >
        </Button>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create File" >
        </Button>

        <Button
            android:id="@+id/btn_volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="volley" >
        </Button>

        <Button
            android:id="@+id/btn_imageloader_volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="imageloader_volley" >
        </Button>

        <Button
            android:id="@+id/btn_gson_volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gson_volley" >
        </Button>

        <Button
            android:id="@+id/btn_open_diskcache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用DiskCache" >
        </Button>

        <Button
            android:id="@+id/btn_get_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取网络图片" >
        </Button>

        <Button
            android:id="@+id/btn_photo_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="照片墙" >
        </Button>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <uk.co.senab.photoview.PhotoView
            android:id="@+id/photoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </uk.co.senab.photoview.PhotoView>

        <TextView
            android:id="@+id/tv_imgtostr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>