<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用贝塞尔quadTo绘制"
        android:textColor="@color/transparent_red"
        android:textSize="20sp"
        android:padding="5dip"
        android:textStyle="bold" />

    <com.me.diankun.drawdemo.view.DrawingWithBezier
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直接lineTo绘制"
        android:textColor="@color/transparent_red"
        android:textSize="20sp"
        android:padding="5dip"
        android:textStyle="bold" />

    <com.me.diankun.drawdemo.view.DrawingWithoutBezier
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#000000" />

    <Button
        style="@style/button_style"
        android:onClick="drawLineTo"
        android:text="使用DrawLine"
        android:visibility="gone" />


</LinearLayout>