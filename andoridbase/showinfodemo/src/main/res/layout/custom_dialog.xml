<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_image1"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/animal1" />

    <ImageView
        android:id="@+id/dialog_image2"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/animal2" />

    <ImageView
        android:id="@+id/dialog_image3"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/animal3" />

    <ImageView
        android:id="@+id/dialog_image4"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/animal4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TEst"
        android:textSize="22sp"
        android:padding="5dip"
        android:gravity="center"/>
</LinearLayout>
